<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Email" x:Name="emailEntry"/>
        <Entry Placeholder="Name" x:Name="nameEntry"/>
        <Entry Placeholder="Phone" x:Name="phoneEntry"/>
        <Entry Placeholder="Password" IsPassword="True" x:Name="passwordEntry"/>
        <Entry Placeholder="Confirm Password" IsPassword="True" x:Name="confirmPasswordEntry"/>

        <Button Text="Register" Clicked="OnRegisterClicked"/>
    </VerticalStackLayout>
</ContentPage>